  <StarBackground />
  <div class="absolute inset-0 bg-gradient-to-b from-space-blue-dark/50 to-transparent"></div>
  <div class="relative z-10 text-center px-4 fade-in">
    <img
      src="/images/gallery/Abubakr.jpg"
      alt="Abubakr Ibrahim"
      class="w-48 h-48 rounded-full mx-auto mb-8 border-4 border-space-blue-light/30 shadow-xl shadow-space-blue/20"
    />
    <h1 class="text-5xl md:text-6xl font-bold text-white mb-4">
      Abubakr Ibrahim
    </h1>
    <p class="text-xl md:text-2xl text-space-blue-light mb-8">
